<div class="row mt-3">
  <div class="col-md-8 m-auto">
    <div class="card card-body">
      <form action="/restaurants" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">餐廳名稱 (必填)</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="請輸入名稱" value="{{name}}">
        </div>
        <div class="mb-3">
          <label for="name_en" class="mb-2">英文名稱</label>
          <input type="text" id="name_en" name="name_en" class="form-control" placeholder="請輸入英文名稱" value="{{name_en}}">
        </div>
        <div class="mb-3">
          <label for="category" class="mb-2">餐廳分類 (必填)</label>
          <input type="text" id="category" name="category" class="form-control" placeholder="請輸入分類"
            value="{{category}}">
        </div>
        <div class="mb-3">
          <label for="image" class="mb-2">餐廳照片 (必填)</label>
          <input type="url" id="image" name="image" class="form-control" placeholder="請輸入圖片網址" value="{{image}}">
        </div>
        <div class="mb-3">
          <label for="location" class="mb-2">餐廳地址 (必填)</label>
          <input type="text" id="location" name="location" class="form-control" placeholder="請輸入地址"
            value="{{location}}">
        </div>
        <div class="mb-3">
          <label for="phone" class="mb-2">餐廳電話 (必填)</label>
          <input type="tel" id="phone" name="phone" class="form-control" placeholder="請輸入電話號碼" value="{{phone}}">
        </div>
        <div class="mb-3">
          <label for="google_map" class="mb-2">Google Map 網址 (必填)</label>
          <input type="url" id="google_map" name="google_map" class="form-control" placeholder="請輸入 Google Map 網址"
            value="{{google_map}}">
        </div>
        <div class="mb-3">
          <label for="rating" class="mb-2">餐廳評分 (必填)</label>
          <input type="text" id="rating" name="rating" class="form-control" placeholder="請輸入評分" value="{{rating}}">
        </div>
        <div class="mb-3">
          <label for="description" class="mb-2">餐廳簡介 (必填)</label>
          <input type="text" id="description" name="description" class="form-control" placeholder="請簡單介紹餐廳"
            value="{{description}}">
        </div>
        {{> message}}
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary btn-block">新增餐廳</button>
        </div>
      </form>
    </div>
  </div>
</div>